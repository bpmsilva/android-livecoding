<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/anonymous_class_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anonymous Class"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lambda_class_button"
        />

    <Button
        android:id="@+id/lambda_class_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lambda Function"
        app:layout_constraintBottom_toTopOf="@+id/custom_class_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anonymous_class_button" />

    <Button
        android:id="@+id/custom_class_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Class"
        app:layout_constraintBottom_toTopOf="@+id/activity_class_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lambda_class_button"
        />

    <Button
        android:id="@+id/activity_class_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Class"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_class_button"
/>

</androidx.constraintlayout.widget.ConstraintLayout>