<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/oldStyleLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Título sem cor de tema -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-vindo ao App!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Campo de texto simples (EditText) -->
    <EditText
        android:id="@+id/editTextNameOld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite seu nome"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />

    <!-- Botão simples sem estilo -->
    <Button
        android:id="@+id/buttonNextOld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Tela Simples"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_48_white"
        android:layout_gravity="center" />
</LinearLayout>
