<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/abrir_navegador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abrir Navegador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/abrir_telefone"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/abrir_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abrir Telefone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ligacao_por_telefone"
        app:layout_constraintTop_toBottomOf="@+id/abrir_navegador" />

    <Button
        android:id="@+id/ligacao_por_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ligação pelo Telefone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/abrir_mapas"
        app:layout_constraintTop_toBottomOf="@+id/abrir_telefone" />

    <Button
        android:id="@+id/abrir_mapas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mapas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/enviar_email"
        app:layout_constraintTop_toBottomOf="@+id/ligacao_por_telefone" />

    <Button
        android:id="@+id/enviar_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/compartilhar_texto"
        app:layout_constraintTop_toBottomOf="@+id/abrir_mapas" />

    <Button
        android:id="@+id/compartilhar_texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compartilhar texto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enviar_email" />
</androidx.constraintlayout.widget.ConstraintLayout>