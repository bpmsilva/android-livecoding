<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityCircle">

    <Button
        android:id="@+id/botaoCircle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botão 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botão 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircle="@+id/botaoCircle1"
        app:layout_constraintCircleAngle="190"
        app:layout_constraintCircleRadius="460dp"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botão 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircle="@+id/botaoCircle1"
        app:layout_constraintCircleAngle="170"
        app:layout_constraintCircleRadius="460dp"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>